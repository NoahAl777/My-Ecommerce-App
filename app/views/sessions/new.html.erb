<h1>Login</h1>

<!-- flash message - user email not found -->
<h3>
  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>
</h3>

<%= form_tag("/sessions") do %>
  <p>
  <%= label_tag "email", "Email:" %>
  <%= text_field_tag "email" %>
</p>
<p>
  <%= label_tag "password", "Password:" %>
  <%= password_field_tag "password" %>
</p>
  <%= submit_tag "Login" %>
<% end %>