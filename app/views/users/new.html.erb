<h1>Sign Up to Make a Post!</h1>

<%= form_tag("/users") do %>
  <p>
    <%= label_tag "email", "Email:" %>
    <%= text_field_tag "email" %>
  </p>
  <p>
    <%= label_tag "password", "Password:" %>
    <% if @user && @user.errors[:password] %>
    <p>Please include a password</p>
    <% end %>

    <%= password_field_tag "password" %>
  </p>
  <%= submit_tag "Sign Up" %>
<% end %>